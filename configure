echo "CC=g++" > Makefile.rules
echo "BINFLAGS=-Wall -Wextra -Werror -pedantic -std=c++98" >> Makefile.rules
echo 'SRCFR=fun_reg.cc' >> Makefile.rules
echo 'SRCSIM=simple.cc' >> Makefile.rules
echo 'SRCXOR=xor.cc' >> Makefile.rules
echo 'SRCLET=learn_letter.cc' >> Makefile.rules
echo 'LIBSRC=network.cc perceptron.cc wt_parser.cc map_parser.cc activ_fun.cc' >> Makefile.rules
echo 'OBJFR=$(SRCFR:.cc=.o)' >> Makefile.rules
echo 'OBJSIM=$(SRCSIM:.cc=.o)' >> Makefile.rules
echo 'OBJXOR=$(SRCXOR:.cc=.o)' >> Makefile.rules
echo 'OBJLET=$(SRCLET:.cc=.o)' >> Makefile.rules
echo 'LIBOBJ=$(LIBSRC:.cc=.o)' >> Makefile.rules
echo "BIN=ann" >> Makefile.rules
echo "LIB=nbox" >> Makefile.rules
echo "SOFLAGS=-Wall -Wextra -Werror -pedantic -std=c++98 -fPIC" >> Makefile.rules

